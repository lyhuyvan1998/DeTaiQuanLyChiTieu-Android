<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="120dp"
    android:background="@drawable/about_us"
    android:orientation="vertical">
    <TextView
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/tenungdung"/>

    <TextView
        android:textColor="@color/red"
        android:gravity="center"
        style="@style/TextThongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/app_name"/>
    <TextView
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/phienban"/>
    <TextView
        android:gravity="center"
        android:textColor="@color/red"
        style="@style/TextThongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/version"/>
    <TextView
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/thietkeboi"/>
    <TextView
        android:textColor="@color/red"
        android:gravity="center"
        style="@style/TextThongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/designer"/>
    <TextView
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/masinhvien"/>
    <TextView
        android:textColor="@color/red"
        android:gravity="center"
        style="@style/TextThongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/mssv"/>
    <TextView
        android:textSize="21dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/lop"/>
    <TextView
        android:textColor="@color/red"
        android:gravity="center"
        style="@style/TextThongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/tenlop"/>
</LinearLayout>
